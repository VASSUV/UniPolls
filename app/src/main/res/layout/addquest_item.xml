<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/add_quest_item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="8dp">

    <EditText
        android:id="@+id/addquest_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/addquest_AddButton"
        android:hint="Ответ"
        android:inputType="text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/addquest_deleteButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:background="@drawable/icon_delete"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:id="@+id/addquest_AddButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:background="@drawable/ic_baseline_add_24px"
        android:layout_toLeftOf="@id/addquest_deleteButton"
        android:layout_centerInParent="true"
        android:textSize="18sp" />

</RelativeLayout>