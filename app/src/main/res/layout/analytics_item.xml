<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/analytics_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/an_question_name"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="Вопрос"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/show_more"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/an_question_name"
            android:layout_marginStart="-8dp"
            android:layout_toEndOf="@+id/an_question_name"
            android:src="@drawable/ic_show_more" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/an_item_recView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/an_question_name"
            android:layout_marginStart="10dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView >