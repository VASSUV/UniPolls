<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_quest_questname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название вопроса"
            android:inputType="text"
            android:textSize="22sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/add_quest_recView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_quest_questname">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/add_quest_saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/add_quest_recView"
            android:text="Save"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>