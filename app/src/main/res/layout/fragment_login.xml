<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a8ffb6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/monkey_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/monkey1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/login_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/monkey_logo"
                android:layout_centerVertical="true"
                android:text="Login"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_textview"
                android:hint="login"
                android:inputType="text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/pass_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_username"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass_textview"
                android:hint="password"
                android:inputType="textPassword"
                android:textSize="24sp" />

            <Button
                android:id="@+id/login_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_password"
                android:layout_centerHorizontal="true"
                android:text="@string/Login" />

            <Button
                android:id="@+id/login_registration_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_login_button"
                android:layout_centerHorizontal="true"
                android:text="@string/Registration" />

        </RelativeLayout>
    </ScrollView>

    <WebView
        android:id="@+id/auth_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </WebView>
</FrameLayout>