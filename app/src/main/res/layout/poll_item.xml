<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/poll_item"
    app:cardElevation="8dp"
    app:cardCornerRadius="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtPollName"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="26sp"
            android:layout_marginStart="8dp"
            android:hint="Название опроса"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/poll_quest_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPollName"
            android:padding="8dp"
            android:text="Количество вопросов: "
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:focusable="true" />

        <TextView
            android:id="@+id/poll_compl_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poll_quest_count"
            android:text="Пройдено раз: "
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>