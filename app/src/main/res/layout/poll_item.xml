<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/img_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:src="@drawable/surveymonkey"
                android:scaleType="matrix"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgFlag"
                android:layout_width="50dp"
                android:background="@mipmap/ic_poll_active"
                android:scaleType="centerCrop"
                android:layout_height="50dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPollName"
            android:layout_width="wrap_content"
            android:layout_below="@+id/img_layout"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="26sp"
            android:text="My poll"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCompletedCount"
            android:layout_below="@+id/txtPollName"
            android:textSize="24sp"
            android:text="Завершено: 10"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btnDetails"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/txtCompletedCount"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Детали"
            android:clickable="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:focusable="true" />



    </RelativeLayout>

</android.support.v7.widget.CardView>