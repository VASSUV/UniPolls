<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editquest_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/editquest_answName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/editquest_addButton"
        android:hint="Ответ"
        android:inputType="text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/editquest_deleteButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@drawable/icon_delete"
        android:textSize="18sp" />

    <Button
        android:id="@+id/editquest_addButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_gravity="end"
        android:layout_toStartOf="@id/editquest_deleteButton"
        android:background="@drawable/ic_baseline_add_24px"
        android:textSize="18sp" />

</RelativeLayout>