<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colourSMLightGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colourSMOrange</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colourSMWhite</item>

    </style>



    <style name="SMTitleTheme" parent="@android:style/TextAppearance.Medium">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/colourSMWhite</item>
            <item name="android:typeface">monospace</item>
            <item name="android:background">@color/colourSMGreen</item>
            <item name="android:textSize">22dp</item>
            <item name="android:gravity">left</item>
        </style>
    <style name="SMTextTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colourSMGreen</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/colourSMWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="SMButtonTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colourSMWhite</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/colourSMGreen</item>
        <item name="android:textSize">26dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SMButtonContrastTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colourSMWhite</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/colourSMOrange</item>
        <item name="android:textSize">26dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>

